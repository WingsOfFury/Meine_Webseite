<section class="bg-[#e0e2e6] border-b-2 border-gray-300/30
  shadow-lg">
  <header
    class="flex items-center justify-center lg:justify-between md:py-8 py-8 px-4 dark:text-dark"
  >
    <a href="/">
      <img
        src="/ac1.png"
        class="w-12 hidden lg:block relative group border"
        alt="Ein Logo"
      />
    </a>

    <nav class="hidden lg:flex items-center justify-center gap-x-8 text-2xl">
      <NavigationLinks />
    </nav>

    <nav class="hidden lg:flex items-center justify-center gap-x-5">
      <!-- <NavigationSocialBar /> -->
      <section
        id="themeToggle"
        class="hover:cursor-pointer border-2 border-dark bg-dark dark:bg-yellow-200 p-1"
      >
        <img src="/icons/moon.svg" alt="moon" class="w-6 h-6" />
        <!-- <img src="/icons/moon.svg" alt="moon" class="w-6 h-6" /> -->
        <!-- <Icon name="line-md:moon-rising-loop" width="21" height="21" /> -->
      </section>
    </nav>
  </header>

  <!-- Zeile 9 wurde dark:text-dark ,bg-gray-200, border-b-2 hinzugefügt -->
  <!-- Zeile 9 Font-Medium entfernt -->
  <!-- Zeile 10 wurde hidden hinzugefügt um die Top Nav auszublenden -->

