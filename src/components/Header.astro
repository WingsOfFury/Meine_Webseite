---
import NavigationLinks from "../components/NavigationLinks.astro";
import NavigationSocialBar from "../components/NavigationSocialBar.astro";
import Hamburger from "./Hamburger.astro";
import DropdownLanguages from "./DropdownLanguages.astro";
// import { Icon } from "astro-icon";

// import { SITE_TITLE } from "../consts";
import LanguagePicker from "../components/LanguagePicker.astro";
---

<section class="bg-[#e0e2e6] border-b-2 border-gray-300/30
  shadow-lg">
  <header
    class="flex md:items-center lg:justify-center md:justify-start xl:justify-between md:py-8 py-8 px-4 dark:text-dark"
  >
    <a href="/" class="flex items-center justify-around gap-3">
      <img src="/ac1.png" class="w-12" alt="Akansel Cengiz Logo" />
      <span class="self-center text-2xl font-semibold whitespace-nowrap"
        >Akansel Cengiz</span
      >
    </a>
    <nav class="flex w-3/4 justify-end lg:hidden">
      <Hamburger />
    </nav>

    <nav class="hidden lg:flex items-center justify-center gap-x-8 text-2xl">
      <NavigationLinks />
    </nav>

    <nav class="hidden lg:flex items-center justify-center gap-x-5">
      <DropdownLanguages />
      <LanguagePicker />
      <section
        id="themeToggle"
        class="hover:cursor-pointer border-2 border-dark bg-dark dark:bg-yellow-200 p-1"
      >
        <!-- <img src="/icons/moon.svg" alt="moon" class="w-6 h-6" /> -->

        <!-- <img src="/icons/moon.svg" alt="moon" class="w-6 h-6" /> -->
        <!-- <Icon name="line-md:moon-rising-loop" width="21" height="21" /> -->
      </section>
    </nav>
  </header>
</section>

