const happy = true;
const finished = true;
const goal = 3;

const identity = {
  firstName: "Akansel",
  country: "Deutschland",
  occupation: "Full Stack Web Developer",
  hobbies: ["Lebenslanges Lernen", "Kochen", "Fitnesstudio"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "GitHub", "AWS"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
