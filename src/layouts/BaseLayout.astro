---
// Importiere die Header-Komponente aus dem components-Ordner
import Header from "../components/Header.astro";

// Importiere die Footer-Komponente aus dem components-Ordner
import Footer from "../components/Footer.astro";

// Importiere die mobile Navigations-Komponente aus dem components-Ordner
import NavigationMobile from "../components/NavigationMobile.astro";

// Importiere die globalen CSS-Stile
import "../styles/global.css";

// Importiere verschiedene Schriftstile der Schriftart "Ubuntu"
import "@fontsource/ubuntu/300.css";
import "@fontsource/ubuntu/400.css";
import "@fontsource/ubuntu/500.css";
import "@fontsource/ubuntu/700.css";

// Importiere die Schriftart "Poppins"
import "@fontsource/poppins";

// Destrukturiere die Variablen pageTitle und description aus den Astro.props
const { pageTitle, description } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <!-- Setze die Zeichencodierung auf UTF-8 -->
    <meta charset="UTF-8" />
    <!-- Setze die Ansichtsfenster-Breite -->
    <meta name="viewport" content="width=device-width" />
    <!-- Setze die Seitenbeschreibung -->
    <meta name="description" content={description} />
    <!-- Setze den Generator -->
    <meta name="generator" content={Astro.generator} />
    <!-- Füge ein Favicon hinzu -->
    <link rel="icon" type="image/png" sizes="192x192" href="/ac1.png" />
    <!-- Setze den Seitentitel -->
    <title>{pageTitle}</title>
  </head>
  <!-- Setze Klassen für den hellen und dunklen Modus -->
  <body class="bg-light dark:bg-dark text-dark dark:text-light">
    <main
      id="swup"
      class="swup-transition-fade relative md:container md:mx-auto w-full min-h-screen"
    >
      <!-- Füge die Header-Komponente ein -->
      <Header />
      <!-- Füge eine animierte Überschrift hinzu -->
      <h1 class="transition animate-fadeInSlideUp mt-10">{description}</h1>
      <article class="text-lg md:text-2xl px-4 py-8">
        <!-- Platzhalter für dynamischen Inhalt -->
        <slot />
      </article>
      <!-- Füge die Footer-Komponente ein -->
      <Footer />
      <!-- Füge die mobile Navigations-Komponente ein -->
      <NavigationMobile />
    </main>
    <script>
      import "../scripts/menu.js";
    </script>
    <!-- Kommentiere verschiedene Änderungen und Anpassungen:
         Zeile 29: md:container auf lg:container geändert, um die border-2 Einstellung von Rand zu Rand unter 1024px zu ermöglichen.
         Zeile 29: Auf 2xl:container geändert, um einen visuellen Effekt im Header zu beheben.
         Zeile 40: Transition eingefügt, um "{description}" bei jedem Seitenwechsel hinein gleiten zu lassen. -->
    <button
      id="to-top-button"
      onclick="goToTop()"
      title="Go To Top"
      class="hidden fixed z-50 bottom-10 right-10 p-4 border-0 w-14 h-14 rounded-full shadow-md hover:bg-rose-400 bg-rose-600 dark:bg-green-400 dark:hover:bg-green-600 text-white text-lg font-semibold transition-colors duration-300"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
      >
        <!-- SVG-Pfad für das Pfeilsymbol -->
        <path d="M12 4l8 8h-6v8h-4v-8H4l8-8z"></path>
      </svg>
      <!-- Text für Screenreader -->
      <span class="sr-only">Go to top</span>
    </button>
  </body>
</html>
