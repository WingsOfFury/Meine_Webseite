---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import NavigationMobile from "../components/NavigationMobile.astro";
import "../styles/global.css";

import "@fontsource/ubuntu/300.css";
import "@fontsource/ubuntu/400.css";
import "@fontsource/ubuntu/500.css";
import "@fontsource/ubuntu/700.css";

import "@fontsource/poppins";

const { pageTitle, description } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" sizes="192x192" href="/ac1.png" />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-light dark:bg-dark text-dark dark:text-light">
    <main
      id="swup"
      class="swup-transition-fade relative md:container md:mx-auto w-full min-h-screen"
    >
      <Header />
      <article class="text-lg md:text-2xl px-4 py-8">
        <slot />
      </article>
      <Footer />
      <NavigationMobile />
    </main>
    <script>
      import "../scripts/menu.js";
    </script>
    <!-- Ich habe in Zeile 29 md:container auf lg:container gesetzt.Jetzt verläuft die border-2 einstellung komplett von Bildrand zu Bildrand sobald sie unter 1024px fällt.--><!-- Zeile 29 habe ich auf 2xl:container geändert damit der Effekt (es fehlt ein stück vom Bild oben rechts in der Ecke im Header) wieder verschwindet  --><!--class="swup-transition-fade relative min-xl:container md:mx-auto w-full min-h-screen" --><!-- Zeile 40 wurde eine Transition eingefügt um die "{description}" 
bei jedem Seitenwechsel in das Bild rein Sliden zu lassen-->
    <button
      id="to-top-button"
      onclick="goToTop()"
      title="Go To Top"
      class="hidden fixed z-50 bottom-10 right-10 p-4 border-0 w-14 h-14 rounded-full shadow-md bg-rose-600 dark:bg-green-400 text-white text-lg font-semibold transition-colors duration-300"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
      >
        <path d="M12 4l8 8h-6v8h-4v-8H4l8-8z"></path>
      </svg>
      <span class="sr-only">Go to top</span>
    </button>

    <script is:inline>
      // Get the 'to top' button element by ID
      var toTopButton = document.getElementById("to-top-button");

      // Check if the button exists
      if (toTopButton) {
        // On scroll event, toggle button visibility based on scroll position
        window.onscroll = function () {
          if (
            document.body.scrollTop > 500 ||
            document.documentElement.scrollTop > 500
          ) {
            toTopButton.classList.remove("hidden");
          } else {
            toTopButton.classList.add("hidden");
          }
        };

        // Function to scroll to the top of the page smoothly
        window.goToTop = function () {
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          });
        };
      }
    </script>
  </body>
</html>
